@model ShoppingCartVM

<form method="get" asp-action="Summary" asp-controller="Cart" asp-area="Customer">
    <section class="h-100 h-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-lg-8">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-5">
                                            <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                            <h7 class="mb-0 text-muted">@Model.TotalItems items</h7>
                                        </div>
                                        <hr class="my-4">

                                        @*FORLOOP*@
                                        @foreach (var cart in Model.ShoppingCarts)
                                        {
                                            <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                <div class="col-md-2 col-lg-2 col-xl-2">
                                                    <a asp-action="Details" asp-controller="Home" asp-area="Customer" asp-route-productId="@cart.ProductId">
                                                        <img src="@cart.Product.ImageUrl"
                                                         class="img-fluid rounded-3" alt="@cart.Product.Title">
                                                    </a>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-3">
                                                    <h7 class="text-info mb-0">@cart.Product.Title</h7>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                    <a class="btn btn-link px-2" asp-action="Minus"
                                                   asp-controller="Cart" asp-area="Customer" asp-route-cartId=@cart.Id>
                                                        <i class="bi bi-dash"></i>
                                                    </a>
                                                    <input min="0" value="@cart.Count" type="number"
                                                       class="form-control form-control-sm" style="width: 60px" />
                                                    <a class="btn btn-link px-2" asp-action="Plus"
                                                   asp-controller="Cart" asp-area="Customer" asp-route-cartId=@cart.Id>
                                                        <i class="bi bi-plus"></i>
                                                    </a>
                                                </div>
                                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                    <h7 class="mb-0">@cart.FinalPrice.ToString("c")</h7>
                                                </div>
                                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                    <a asp-action="Delete" asp-controller="Cart" asp-route-cartId=@cart.Id class="text-danger">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <hr class="my-4">
                                        }
                                        @*END LOOP*@

                                        <div class="pt-5">
                                            <h7 class="mb-0">
                                                <a asp-action="Index" asp-controller="Home" class="text-body">
                                                    <i class="bi bi-arrow-left"></i>Continue to shop
                                                </a>
                                            </h7>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 bg-grey">
                                    <div class="p-5">
                                        <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                                        <hr class="my-4">
                                        <div class="d-flex justify-content-between mb-4">
                                            <h6 class="text-uppercase">Total items: </h6>
                                            <h6>@Model.TotalItems</h6>
                                        </div>
                                        <div class="d-flex justify-content-between mb-4">
                                            <h6 class="text-uppercase">Total price: </h6>
                                            <h6>@Model.TotalPrice.ToString("c")</h6>
                                        </div>
                                        <h6 class="text-uppercase mb-3">Code promotion</h6>
                                        <div class="mb-5">
                                            <div class="form-outline">
                                                <input type="text" id="" class="form-control form-control-lg" placeholder="Enter your code" />
                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <div class="d-flex justify-content-between mb-5">
                                            <h6 class="text-uppercase text-info">Final price</h6>
                                            <h6>@Model.TotalPrice.ToString("c")</h6>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block btn-lg w-100">
                                            Next step
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>