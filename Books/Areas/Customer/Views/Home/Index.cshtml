@using Books.Model
@using X.PagedList;
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="my-3">
    <div class="d-flex w-100 justify-content-end mb-2">
        <form class="d-flex w-25" asp-action="Index" asp-controller="Home" method="get">
            <input class="form-control me-sm-2" name="searchTxt" type="search" placeholder="Search by title" value="@(ViewBag.CurrentSearch ?? "")">
            <button class="btn btn-outline-primary" my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card">
                            <img src="@product.ImageUrl" class="card-img-top rounded" style="height: 250px; object-fit: cover; -o-object-position: center" />

                            <div class="card-body">
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Title</p>
                                    <p class="card-title text-info">by <b>@product.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                                </div>
                                <div class="pl-1">
                                    <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @Html.PagedListPager(
    Model,
    page => Url.Action("Index", new {page = page,}),
    new PagedListRenderOptions {
    LiElementClasses = new string[] {"page-item"},
    PageClasses = new string[] {"page-link"},
    ContainerDivClasses = new string[] {"pagination", "justify-content-center"},
    MaximumPageNumbersToDisplay = 5,
    }
    )
</div>