@model CoverType

<form method="post" asp-area="Admin" asp-action="Delete" asp-controller="CoverType">
    <input asp-for="Id" hidden readonly />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div asp-validation-summary=All></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" readonly class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button class="btn btn-outline-warning" type="submit" style="width: 150px">Delete</button>
        <a class="btn btn-secondary mx-2" style="width: 150px" asp-area="Admin" asp-action="Index" asp-controller="CoverType">
            Back to the list
        </a>
    </div>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
