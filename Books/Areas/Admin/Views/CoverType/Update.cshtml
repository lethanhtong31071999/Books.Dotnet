@model CoverType
<form method="post" asp-action="Update" asp-controller="CoverType" asp-area="Admin">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2>
            <hr />
        </div>

        <div asp-validation-summary=All></div>
        <input hidden readonly asp-for="Id"/>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button class="btn btn-outline-primary" type="submit" style="width: 150px">Update</button>
        <a class="btn btn-secondary mx-2" style="width: 150px" asp-area="Admin" asp-action="Index" asp-controller="Category">
            Back to the list
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
 