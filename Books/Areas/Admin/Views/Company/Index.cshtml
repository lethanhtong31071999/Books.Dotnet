@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container-fuild mb-2">
    <div class="row pt-4 mb-3">
        <div class="col-6">
            <h2 class="text-primary">Companies</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Company" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>
                Create a new company
            </a>
        </div>
    </div>
    <div class="">
        <table id="dataTableAdmin" class="mt-3" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Street</th>
                    <th>State</th>
                    <th>Post Code</th>
                    <th>Phone Number</th>
                    <th>Function</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
<script src="~/js/site.js"></script>
<script src="~/js/company.js"></script>
}
