@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container-fuild mb-2">
    <div class="row pt-4 mb-3">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Product" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>
                Create a new product
            </a>
        </div>
    </div>
    <div class="">
        <table id="dataTableAdmin" class="mt-3" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Function</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
<script src="~/js/site.js"></script>
<script src="~/js/product.js"></script>
}
