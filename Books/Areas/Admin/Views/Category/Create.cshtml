@model Category

<div class="form-group">
    <form method="post" asp-area="Admin" asp-action="Create" asp-controller="Category">
        <div class="border p-3">
            <div class="row pb-2">
                <h2 class="text-primary">Create Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger" ></div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger invalid-feedback" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span class="text-danger invalid-feedback" asp-validation-for="DisplayOrder"></span>
            </div>
            <button class="btn btn-outline-success" type="submit" style="width: 150px">Create</button>
            <a class="btn btn-secondary mx-2" style="width: 150px" asp-action="Index" asp-controller="Category">
                Back to the list
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
