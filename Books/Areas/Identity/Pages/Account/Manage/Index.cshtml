@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<section class="container mt-3">
    <div class="mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
            <form id="profile-form" method="post">
                <div class="row g-0">
                    <div class="col-md-2 bg-info text-center text-white"
                         style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                             alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                        <h6><span class="badge bg-success">@Model.Input.Role</span></h6>
                        <hr class="mt-2" />
                        <h6 class="mb-1"><a asp-page="ChangePassword" asp-route-role="@Model.Input.Role" class="text-white">Change password</a></h6>
                    </div>
                    <div class="col-md-10">
                        <div class="card-body p-4">
                            <h4 class="text-info text-center">Profile Information</h4>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-md-12 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Username" class="form-control" disabled />
                                        <label asp-for="Username" class="form-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.Name" class="form-control" />
                                        <label asp-for="Input.Name" class="form-label"></label>
                                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.PhoneNumber" class="form-control" />
                                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.StreetAddress" class="form-control" />
                                        <label asp-for="Input.StreetAddress" class="form-label"></label>
                                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.City" class="form-control" />
                                        <label asp-for="Input.City" class="form-label"></label>
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.State" class="form-control" />
                                        <label asp-for="Input.State" class="form-label"></label>
                                        <span asp-validation-for="Input.State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.PostalCode" class="form-control" />
                                        <label asp-for="Input.PostalCode" class="form-label"></label>
                                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center col-12">
                                    <button id="update-profile-button" type="submit" class="w-75 btn btn-md btn-primary">Save</button>
                                </div>
                            </div>
                            @*Admin edit role*@
                            @*<hr class="mt-0 mb-4">
                            <div class="row pt-1">
                            </div>*@
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
