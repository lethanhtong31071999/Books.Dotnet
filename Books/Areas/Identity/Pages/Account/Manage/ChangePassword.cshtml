@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<partial name="_StatusMessage" for="StatusMessage" />

<section class="container mt-3">
    <div class="mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
            <form id="profile-form" method="post">
                <div class="row g-0">
                    <div class="col-md-2 bg-info text-center text-white"
                         style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                             alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                        <hr class="mt-2" />
                        <h6 class="mb-1"><a asp-page="Index" class="text-white">Back to Profile</a></h6>
                    </div>
                    <div class="col-md-10">
                        <div class="card-body p-4">
                            <h4 class="text-info text-center">@ViewData["Title"]</h4>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.OldPassword" class="form-control" />
                                        <label asp-for="Input.OldPassword" class="form-label"></label>
                                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.NewPassword" class="form-control" />
                                        <label asp-for="Input.NewPassword" class="form-label"></label>
                                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center col-12">
                                    <button id="update-profile-button" type="submit" class="w-75 btn btn-md btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
